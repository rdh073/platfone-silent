# --- APPLICATION CONFIGURATION ---

# 1. Environment Selection (APPLICATION LAYER)
# Allowed: development | staging | production
APP_ENVIRONMENT=development

# 2. Canonical Config Mapping (Strict Package Contract)
# Mapped from deployment vars based on APP_ENVIRONMENT

# PLATFONE_API_KEY
PLATFONE_API_KEY=your_development_key_here

# PLATFONE_API_BASE_URL
PLATFONE_API_BASE_URL=https://temp-number-api.com/test/api/v1

# 3. Policy (Valid values: CHEAPEST, BALANCED, BEST_QUALITY)
PLATFONE_MAX_PRICE=1.00
PLATFONE_PRICE_POLICY=BALANCED
# Execution Mode (Valid values: DRY_RUN, LIVE)
PLATFONE_EXECUTION_MODE=DRY_RUN
# If true, automatically finalizes the activation when SMS is received
PLATFONE_AUTO_FINALIZE=false

# 4. Policy Details (Required for BALANCED policy)
PLATFONE_PRICE_WEIGHT=0.5
PLATFONE_QUALITY_WEIGHT=0.5

# 5. Observability
PLATFONE_LOG_LEVEL=debug
PLATFONE_AUDIT_LOG_ENABLED=true

# 6. Webhook
PLATFONE_WEBHOOK_SECRET=508bdc19e87281fc1840efffc2d538a1b7872ad83a3b6a2da86d99318c284038
PLATFONE_WEBHOOK_PORT=3000 # Integer 1024-65535
